<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="ShopItemsDemoService" monitorInterval="30">
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p %-50C{1.} [%t] %m%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <AsyncLogger name="org.hibernate.SQL" level="INFO"/>
        <AsyncRoot level="INFO">
            <AppenderRef ref="STDOUT"/>
        </AsyncRoot>
    </Loggers>
</Configuration>
